
@model Wedding


<div class="container">
      
    <a asp-controller="Wedding" asp-action="Index"><h1>Dashboard</h1></a> <a asp-controller="Wedding" asp-action="Logout"><h1>Log Out</h1></a><hr>
<h1>Plan your Wedding !! </h1><br><hr>
      

        <form asp-action="CreateWedding" asp-controller="Wedding" method="post">

        <h1>Register.</h1><br>
            <div class="form-group">
                <span asp-validation-for="Groom"></span>
                <label asp-for="Groom"></label>
                <input class="form-control" asp-for="Groom">
            </div>
            <div class="form-group">
                <span asp-validation-for="Bride"></span>
                <label asp-for="Bride"></label>
                <input class="form-control" asp-for="Bride">
            </div>
            <div class="form-group">
                <span asp-validation-for="Date"></span>
                <label asp-for="Date"></label>
                <input class="form-control" asp-for="Date">
            </div>
            <div class="form-group">
                <span asp-validation-for="Venue"></span>
                <label asp-for="Venue"></label>
                <input class="form-control" asp-for="Venue">
            </div>
        
        <input type="hidden" asp-for="UserId" value="@ViewBag.Id">
            <button>Submit!</button>
        </form>
</div>


